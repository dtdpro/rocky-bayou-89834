{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block main %}
    <h1>Users</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th><i class="fa fa-user"></i>Username</th>
                <th>Email</th>
                <th><i class="fa fa-cogs"></i> Roles</th>
                <th><i class="fa fa-cogs"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.username }}</td>
                <td>{{ u.email }}</td>
                <td>{% for r in u.roles %}{{ r|trans }}<br>{% endfor %}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', { id: u.id }) }}" class="btn btn-sm btn-default">
                            {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_user_edit', { id: u.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No Users Found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus"></i> Create User
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
